<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="purchase_hide_email_button" model="ir.ui.view">
			<field name="name">Hide Send by Email button on purchase module</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				<xpath expr="//button[1]" position="attributes">
					<attribute name="invisible">1</attribute>
					<attribute name="states" />
				</xpath>
				<xpath expr="//button[2]" position="attributes">
					<attribute name="invisible">1</attribute>
					<attribute name="states" />
				</xpath>
				<xpath expr="//button[8]" position="attributes">
					<attribute name="invisible">1</attribute>
					<attribute name="states" />
				</xpath>
			</field>
		</record>

	</data>
</openerp>